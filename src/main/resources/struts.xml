<?xml version="1.0" encoding="UTF-8"?>

        <!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

        <struts>
        <package name="cn.edu.zucc.action.UserAction" extends="struts-default">
                <action name="UserAction_login" class="cn.edu.zucc.action.UserAction" method="login">
                        <result name="success">/admin-index.jsp</result>
                        <result name="error">/login.jsp</result>
                </action>
                <action name="UserAction_register" class="cn.edu.zucc.action.UserAction" method="register">
                        <result name="success">/login.jsp</result>
                        <result name="error">/register.jsp</result>
                </action>
        </package>


        <package name="cn.edu.zucc.action.ArticleAction" extends="struts-default">
                <!-- 文章管理 -->
                <action name="article_*" class="cn.edu.zucc.action.ArticleAction" method="{1}">
                        <result name="query">/admin-article-manage.jsp</result>
                        <result name="success">/admin-article.jsp</result>
                        <result name="input">/admin-article.jsp</result>
                        <result name="message">/message.jsp</result>
                        <result name="delete" type="redirectAction">article</result>
                        <param name="method">{1}</param>
                </action>
        </package>


        <package name="cn.edu.zucc.action.IndexAction"  extends="struts-default">
                <!-- 默认Action跳转到主页 -->
                <default-action-ref name="index"></default-action-ref>
                <!-- 主页 -->
                <action name="index" class="cn.edu.zucc.action.IndexAction" >
                        <result>/blog-index.jsp</result>
                </action>
        </package>

        <package name="cn.edu.zucc.action.CategoryAction"  extends="struts-default">
                <action name="category_*" class="cn.edu.zucc.action.CategoryAction" method="{1}">
                        <result name="query">/admin-category-manage.jsp</result>
                        <result name="success">/admin-category.jsp</result>
                        <result name="input">/admin-category.jsp</result>
                        <result name="message">/message.jsp</result>
                        <result name="delete" type="redirectAction">category</result>
                        <param name="method">{1}</param>
                </action>
        </package>




        <package name="cn.edu.zucc.action.CommentAction"  extends="struts-default">
                <!-- 访客留言 -->
                <action name="commentUI" class="cn.edu.zucc.action.CommentAction" method="commentUI">
                        <result>/comment.jsp</result>
                        <param name="method">commentUI</param>
                </action>
                <action name="comment" class="cn.edu.zucc.action.CommentAction" method="comment">
                        <result name="input">/comment.jsp</result>
                        <result name="success" type="redirectAction">commentUI</result>
                        <param name="method">comment</param>
                </action>
